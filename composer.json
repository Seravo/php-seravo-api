{
    "name": "seravo/php-seravo-api",
    "description": "PHP Library for Seravo API",
    "type": "library",
    "authors": [
        {
            "name": "Tatu Kulmala",
            "email": "tatu@seravo.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.9",
        "jumbojett/openid-connect-php": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Seravo\\SeravoApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Seravo\\Tests\\SeravoApi\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3",
        "phpstan/phpstan": "^1.12",
        "mockery/mockery": "^1.6",
        "squizlabs/php_codesniffer": "^3.10",
        "phpcompatibility/php-compatibility": "^9.3",
        "symfony/var-dumper": "^7.1"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
